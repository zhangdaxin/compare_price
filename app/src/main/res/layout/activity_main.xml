<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/beijing"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp">

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入手机号:"
            android:background="@drawable/line_et_bg"
            android:textColorHint="#fa6d6f"
            android:layout_marginLeft="6dp"
            android:textColor="#fa6d6f"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/key" />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入密码"
            android:background="@drawable/line_et_bg"
            android:textSize="18sp"
            android:layout_marginLeft="6dp"
            android:textColor="#fa6d6f"
            android:textColorHint="#fa6d6f"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/login_1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_button"
            android:text="登录"
            android:textColor="#FFFF"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/forget_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="#f55255"
            />
        <TextView
            android:id="@+id/regist_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户注册"
            android:layout_alignParentRight="true"
            android:textColor="#f55255"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        >

        <TextView
            android:id="@+id/message_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="短信验证码登录"
            android:textAlignment="center"
            android:textColor="#f55255"
            />

    </LinearLayout>


</LinearLayout>
